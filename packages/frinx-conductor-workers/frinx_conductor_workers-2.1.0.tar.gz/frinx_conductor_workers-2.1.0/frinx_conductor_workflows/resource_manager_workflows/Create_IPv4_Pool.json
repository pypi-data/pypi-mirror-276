{
  "name": "Create_IPv4_Pool",
  "description": "{\"description\": \"Create one IPv4 pool\", \"labels\": [\"RESOURCE_MANAGER\"]}",
  "workflowStatusListenerEnabled": true,
  "version": 1,
  "tasks": [
    {
      "name": "RESOURCE_MANAGER_query_pool_by_tag",
      "taskReferenceName": "query_pool_by_tag",
      "type": "SIMPLE",
      "inputParameters": {
          "poolTag": "${workflow.input.pool_name}"
      }
    },
    {
      "label": "decision",
      "name": "decisionTask",
      "taskReferenceName": "pool_exists",
      "inputParameters": {
        "pool_exists": "${query_pool_by_tag.output.result.data.SearchPoolsByTags.edges}"
      },
      "type": "DECISION",
      "caseExpression": "$.pool_exists.length > 0 ? 'True' : 'False'",
      "decisionCases": {
        "True": [
          {
            "name": "terminate",
            "taskReferenceName": "terminate_cleanup_pool",
            "inputParameters": {
              "terminationStatus": "FAILED",
              "workflowOutput": {
                "result": {
                  "error": "Pool with name \"${workflow.input.pool_name}\" already exists. If you want to create new pool, type new name."
                }
              }
            },
            "type": "TERMINATE",
            "startDelay": 0,
            "optional": false
          }
        ]
      },
      "defaultCase": [],
      "startDelay": 0,
      "optional": false
    },
    {
      "name": "RESOURCE_MANAGER_create_pool",
      "taskReferenceName": "create_pool",
      "type": "SIMPLE",
      "inputParameters": {
        "poolName": "${workflow.input.pool_name}",
        "poolProperties": {"address": "${workflow.input.address}", "subnet": "${workflow.input.subnet}", "prefix": "${workflow.input.prefix}"},
        "resourceType": "ipv4"
      }
    }
  ],
  "inputParameters": [
    "{\"pool_name\":{\"value\":\"\",\"description\":\"Pool name. Must be unique\",\"type\":\"string\"}, \"address\":{\"value\":\"192.168.0.0\",\"description\":\"IPv4 initial address\",\"type\":\"string\"}, \"subnet\":{\"value\": false,\"description\":\"Is it subnet pool ? true/false\",\"type\":\"bool\"}, \"prefix\":{\"value\":24,\"description\":\"Pool prefix\",\"type\":\"int\"}}"
  ],
  "outputParameters": {},
  "schemaVersion": 2
}